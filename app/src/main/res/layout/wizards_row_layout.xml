<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="4dp"
        android:paddingBottom="4dp">

        <ImageView
            android:id="@+id/wizard_image_view"
            android:layout_width="140dp"
            android:layout_height="140dp"
            android:padding="4dp"
            android:scaleType="centerCrop"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:srcCompat="@tools:sample/avatars" />


        <TextView
            android:id="@+id/wizard_name_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/aguafina_script"
            android:textColor="@color/hp_text_color"
            android:textSize="@dimen/wizard_row_text_size"
            app:layout_constraintBottom_toTopOf="@+id/house_text_view"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.2"
            app:layout_constraintStart_toEndOf="@+id/wizard_image_view"
            app:layout_constraintTop_toTopOf="@+id/wizard_image_view"
            tools:text="Wizard Name" />

        <TextView
            android:id="@+id/house_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/aguafina_script"
            android:textColor="@color/hp_text_color"
            android:textSize="@dimen/wizard_row_text_size"
            app:layout_constraintBottom_toTopOf="@+id/year_of_birth_text_view"
            app:layout_constraintStart_toStartOf="@+id/wizard_name_text_view"
            app:layout_constraintTop_toBottomOf="@+id/wizard_name_text_view"
            tools:text="House Name" />

        <TextView
            android:id="@+id/year_of_birth_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/aguafina_script"
            android:textColor="@color/hp_text_color"
            android:textSize="@dimen/wizard_row_text_size"
            app:layout_constraintBottom_toBottomOf="@+id/wizard_image_view"
            app:layout_constraintStart_toStartOf="@+id/house_text_view"
            app:layout_constraintTop_toBottomOf="@+id/house_text_view"
            tools:text="Year Of Birth" />

        <ImageView
            android:id="@+id/favorite_image_view"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginEnd="8dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/empty_star" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>